<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@picture.image.url) %>
</p>

<div class="link_button1">
  <%= link_to 'Edit', edit_picture_path(@picture) %>
  <%= link_to 'Home', pictures_path %>

  <br>
  
  <% unless @picture.user_id == current_user.id %>
    <% if @favourite.present? %>
      <%= link_to 'お気に入り解除する', favourite_path(id: @favourite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りにする', favourites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>

</div>
